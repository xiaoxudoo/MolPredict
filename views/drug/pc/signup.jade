extends ./layouts/layout

block content
	// MAIN CONTENT
	.container
		.modal-dialog
			.modal-content
				.modal-header
					h1.text-primary 注册
				.modal-body(style='max-height: 1000px;')
					if error
						.text-error(style='margin-bottom:10px;') #{error}
					form#loginForm.form.col-md-12.center-block(action='/signup', method='post')
						.form-group-lg
							label.sr-only(for='inputAccount') 用户名：
							.input-group
								input#inputAccount.form-control(name='username', type='text', placeholder='username', required='', autofocus='')
						br
						.form-group-lg
							label.sr-only(for='inputEmail') Email
							.input-group
								input#inputEmail.form-control(name='email', type='email', placeholder='email', required='', autofocus='')
						br
						.form-group-lg
							label.sr-only(for='inputPassword') Password
							.input-group
								input#inputPassword.form-control(name='password', type='password', placeholder='password', required='')
								span.text-error#pwdMsg.hidden &nbsp;用户名密码错误
						br
						.form-group-lg
							label.sr-only(for='inputRePassword') Validate Password
							.input-group
								input#inputRePassword.form-control(name='repassword', type='password', placeholder='repassword', required='', autofocus='')
						br
						//- .form-group-lg
						//- 	label.sr-only(for='inputValidateCode') 验证码：
						//- 	.input-group
						//- 		input#inputValidateCode.form-control(name='validateCode', type='text')
						//- br
						.form-group
							button#btn_register.btn.btn.btn-primary.btn-lg(type='submit', style='margin-right:10px;') 注册
							a#btn_register.btn.btn-default.btn-lg(href='/signin') 登录

block scripts
