extends ./layouts/layout

block content
	// MAIN CONTENT
	.container
		.modal-dialog
			.modal-content
				.modal-header
					h1.text-primary 登录
				.modal-body
					if error
						.text-error(style='margin-bottom:10px;') #{error}
					form#loginForm.form.col-md-12.center-block(action='/signin', method='post')
						#accountDiv.form-group-lg
							label.sr-only(for='inputAccount') 账号：
							.input-group
								input#inputAccount.form-control(name='email', type='text', placeholder='email', required='', autofocus='')
						br
						#pwdDiv.form-group-lg
							label.sr-only(for='inputPassword') 密码：
							.input-group
								input#inputPassword.form-control(name='password', type='password', placeholder='password', required='')
						br
						.checkbox
							label
								input(type='checkbox', id='remember', value='remember-me')
								| 记住我
						.form-group
							button#btn_login.btn.btn-primary.btn-lg(type='submit', style='margin-right:10px;') 登录
							a#btn_register.btn.btn-default.btn-lg(href='/signup') 注册

block scripts
