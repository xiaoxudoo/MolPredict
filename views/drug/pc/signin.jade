extends ./layouts/layout

block content
	// MAIN CONTENT
	.container
		.modal-dialog
			.modal-content
				.modal-header
					h2.text-primary Login
				.modal-body
					if error
						.text-error(style='margin-bottom:10px;') #{error}
					form#loginForm.form.col-md-12.center-block(action='/signin', method='post')
						#accountDiv.form-group-lg
							label.sr-only(for='inputAccount') Account:
							.input-group
								input#inputAccount.form-control(name='email', type='text', placeholder='email', required='', autofocus='')
						br
						#pwdDiv.form-group-lg
							label.sr-only(for='inputPassword') Password:
							.input-group
								input#inputPassword.form-control(name='password', type='password', placeholder='password', required='')
						br
						#codeDiv.form-group-lg
							label.sr-only(for='inputCaptcha') CAPTCHA:
							.input-group
								input#inputCaptcha.form-control(style='width:100px;', size='8', name='captcha', type='text', required='')
								img(style='cursor:pointer;margin-bottom:10px;margin-left:2px;', src='/captcha/1', onclick="javascript:this.src='/captcha/'+Math.random()", alt='captcha', width="100" height="50")
						br
						.checkbox
							label
								input(type='checkbox', id='remember', value='remember-me')
								| remember
						br
						.form-group
							button#btn_login.btn.btn-primary.btn-lg(type='submit', style='margin-right:10px;') Login
							a#btn_register.btn.btn-default.btn-lg(href='/signup', style='margin-right:10px;') Register
							a(href='/search_pass') forgot your password?

block scripts
