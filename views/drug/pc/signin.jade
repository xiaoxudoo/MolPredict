extends ./layouts/layout

block content
	// MAIN CONTENT
	.container
		.modal-dialog
			.modal-content
				.modal-header
					h1.text-primary Login
				.modal-body
					if error
						.text-error(style='margin-bottom:10px;') #{error}
					form#loginForm.form.col-md-12.center-block(action='/signin', method='post')
						#accountDiv.form-group-lg
							label.sr-only(for='inputAccount') Account:
							.input-group
								input#inputAccount.form-control(name='email', type='text', placeholder='email', required='', autofocus='')
						br
						#pwdDiv.form-group-lg
							label.sr-only(for='inputPassword') Password:
							.input-group
								input#inputPassword.form-control(name='password', type='password', placeholder='password', required='')
						br
						//- #codeDiv.form-group-lg
						//- 	label.sr-only(for='inputPassword') CAPTCHA:
						//- 	.input-group
						//- 		input#inputCaptcha.form-control(style='width:100px;', name='captcha', type='text', required='')
						//- 		| 123
						//- br
						.checkbox
							label
								input(type='checkbox', id='remember', value='remember-me')
								| remember
						.g-recaptcha(data-sitekey='6LfpkUgUAAAAAJQNmBduk6hRVUSiDG77aenvCOg_')
						.form-group
							button#btn_login.btn.btn-primary.btn-lg(type='submit', style='margin-right:10px;') Login
							a#btn_register.btn.btn-default.btn-lg(href='/signup') Register

block scripts
	script(src='https://www.google.com/recaptcha/api.js')
