extends ./layouts/layout

block content
	// MAIN CONTENT
	.container
		.modal-dialog
			.modal-content
				.modal-header
					h1.text-primary 登录
				.modal-body
					form#loginForm.form.col-md-12.center-block(action='/signin', method='post')
						#accountDiv.form-group-lg
							label.sr-only(for='inputAccount') 账号：
							.input-group
								input#inputAccount.form-control(name='accountNo', type='text', placeholder='username/email', required='', autofocus='')
								span.text-error#accountMsg.hidden &nbsp;用户名不存在
						br
						#pwdDiv.form-group-lg
							label.sr-only(for='inputPassword') 密码：
							.input-group
								input#inputPassword.form-control(name='pwd', type='password', placeholder='password', required='')
								span.text-error#pwdMsg.hidden &nbsp;用户名密码错误
						br
						.checkbox
							label
								input(type='checkbox', name='remember', value='remember-me')
								| 记住我
						.form-group
							button#btn_login.btn.btn-primary.btn-lg(type='button', style='margin-right:10px;') 登录
							a#btn_register.btn.btn-default.btn-lg(href='/signup') 注册

block scripts
